{
  "compilerOptions": {
    "outDir": "./dist",             // Define a pasta de saída
    "rootDir": "./src",             // Define a pasta de entrada
    "target": "es6",                // Versão de JavaScript alvo
    "module": "commonjs",           // Sistema de módulos (Node.js usa CommonJS)
    "strict": true,                 // Ativa verificações mais rígidas
    "esModuleInterop": true         // Melhor compatibilidade com módulos ES6
  }
}
